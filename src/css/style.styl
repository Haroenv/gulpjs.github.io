@require 'nib'
@require 'jeet'

global-reset()

html, body
  height: 100%
  width: 100%

body
  font-family: "Open Sans", sans-serif
  font-weight: 400
  font-size: 14px/1.5

  color: #333
  background-color: #fff

  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  font-feature-settings: 'liga', 'kern'

.navbar
  col(1/1)
  center()
  padding-top: 15px
  padding-bottom: 15px
  float: left
  width: 100%

  a
    color: inherit
    text-decoration: none
    -webkit-tap-highlight-color: transparent
    transition: opacity .2s linear
    transform: translateX(50%)
    margin-bottom: 0
    font-size: 16px
    font-weight: 300
    line-height: 1

    &:focus, &:active
      opacity: .5

  .navbar-title
    display: none
    position: static
    float: left
    left: 50%

  .navbar-links
    center()
    
    .navbar-link
      padding: 0 15px
      border-right: 1px solid rgba(255, 255, 255, 0.2)
      
      &:last-child
        border-right: none

.main-header
  height: 100%
  width: 100%
  //min-height: 750px
  color: #fff
  text-align: center
  background-color: #cf4646

.main-header-content
  align()

.logo
  max-width: 20vh
  max-height: 20vh

.main-header-text
  width: 90vw
  animation: fadein 2s
  margin-bottom: 60px
  font-size: 41px
  font-weight: 300
  line-height: 60px

.main-header-btn
  transition: all 0.4s
  color: inherit
  padding: 15px 20px 16px
  vertical-align: top
  cursor: pointer
  border: 1px solid #fff
  border-radius: 3px
  text-decoration: none
  -webkit-tap-highlight-color: transparent
  animation: fadein 2s
  text-shadow: none
  color: #333
  background-color: #fff
  font-size: 22px

  &:hover
    box-shadow: 0 0 50px rgba(255,255,255,.3)

.main-info
  center(max-width: 1024px)
  background-color: #fff

.benefits
  col(1/1)
  center(max-width: 1024px)
  padding: 50px

  .benefit
    margin-top: 50px
    
    @media screen and (min-width: 700px)
      col(1/2, cycle: 2)
      
    @media screen and (max-width: 700px)
      col(1/2, cycle: 4)
      stack()

    .benefit-title
      margin-bottom: 14px
      font-size: 22px
      font-weight: 500
    
    .benefit-text
      color: #7f8c8d
      font-size: 16px
      line-height: 26px
      
.sample
  min-height: 150px

  .sample-code
    col(1/2)
    font-size: 16px
    line-height: 18px

    code
      border-radius: 2px

    @media screen and (max-width: 768px)
      stack()

  .sample-text
    col(1/2)

    margin-bottom: 1.5em
    font-size: 18px
    line-height: 20px
    color: #555

    @media screen and (max-width: 768px)
      stack(0, center)


@keyframes fadein
  from
    opacity: 0
  to
    opacity: 1